<%= render :partial => 'layouts/header'%>

<div class="container-main">
  <div class="sqr-box-title" style="margin:0px auto">
  <h2>Reset Password</h2>
  </div>
  <div class="sqr-boxs-cat" style="width:40%;margin-left: 532px;margin-top: 50px;">
    <%= form_for @user, :url => customer_update_password_path do |f| %>
      <% if @user.errors.any? %>
        <div class="error_messages">
          <h2>Form is invalid</h2>
          <ul>
            <% for message in @user.errors.full_messages %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="form-sec form-sign">
      <div class="" style="margin-bottom:20px">
        <%= password_field_tag 'current_password', nil, :placeholder => 'Current Password' %>
      </div>
      <div class="" style="margin-bottom:20px">
        <%= password_field_tag :password, nil, :placeholder => 'Password' %>
      </div>
      <div style="margin-bottom:20px">
        <%= password_field_tag :password_confirmation, nil, :placeholder => 'Password Confirmation' %>
      </div>
      <div class="form-submit">
       <%= f.submit "Update Password" %>
      </div>
      </div>
    <%end%>
  </div>
</div>

<div style="margin-top:100px;">
<%= render :partial => 'layouts/footer' %>
</div>