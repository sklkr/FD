<div class="container">
    <div class="row">
        <div class="col-xs-12">
            <div class="panel">
                <div class="panel-body">
                    <!-- <a href="#" class="pull-left avatar">
                        <img src="#" class="img-circle" alt="User Avatar">
                    </a> -->
                    <div class="pull-left m-left-sm">
                        <strong class="font-14 block"><%= @partner.full_name %></strong>
                        <small class="text-muted"><%= @partner.email %></small>
                        <div class="seperator"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-xs-12">
            <div class="panel panel-default table-responsive">
                <div class="panel-heading">
                    <span>Centers</span>
                    <span class="pull-right">
                    </span>
                </div>
                <table class="table table-striped table-responsive" id="responsiveTable">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Location</th>
                            <th>Mobile</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        <% unless @centers.blank? %>
                            <% @centers.each do |center| %>
                            <tr>
                                <td><%= center.name %></td>
                                <td><%= center.place_name %></td>
                                <td><%= center.mobile %></td>
                                <td></td>
                            </tr>
                            <% end %>
                        <% end %>
                </tbody>
                </table>
                <div class="panel-footer clearfix">
                    <span class="pull-right">
                    </span>
                </div>
            </div>
        </div>
        <div class="col-xs-6">
        </div>
    </div>
</div>
