<div>
	<%= form_for @customer, :url => customerdashboard_details_update_path do |u| %>
	  <div class="row">
	    <div class="large-12 columns">
	      <label>First Name
	      	<%= u.text_field :first_name %>
	      </label>
	    </div>
	  </div>
	  <div class="row">
	    <div class="large-4 columns">
	      <label>Last Name
	      <%= u.text_field :last_name %>
	      </label>
	    </div>
	    <div class="large-4 columns">
	      <label>Password
	      <%= u.password_field :password, value: 'xxxxxxxxxxxx' %>
	      </label>
	    </div>
	    <div>
	    	<%= u.submit %>
	    </div>
	  </div>
	<%end%>
</div>