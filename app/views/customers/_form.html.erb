<%= simple_form_for @customer, :html => {:class => 'cd-form form-horizontal', 'data-parsley-validate' => true} do |f| %>
  <%= f.input :email, :label => 'E-mail', label_html: { class: 'image-replace cd-email'}, input_html: { class: 'full-width has-padding has-border', :placeholder => 'E-mail (eg: abc@xxx.com)'  }, wrapper_html: { class: 'fieldset' } %>
  <%= f.simple_fields_for :user do |p| %>
    <%= p.input :full_name, label_html: { class: 'image-replace cd-username'}, input_html: { class: 'full-width has-padding has-border', 'data-parsley-pattern' => '\w+\s+[a-zA-Z-]+', 'data-parsley-required' => 'true', :placeholder => 'Full Name (eg: John Snow)' }, wrapper_html: { class: 'fieldset' } %>
    <%= p.input :phone, label_html: { class: 'image-replace cd-username'}, input_html: { class: 'full-width has-padding has-border', "data-parsley-type" => 'integer', 'data-parsley-pattern' => '^([0]|\+91)?\d{10}', 'data-parsley-required' => 'true', :placeholder => 'Mobile number (eg: 9123456789)'  }, wrapper_html: { class: 'fieldset' } %>
    <%= p.input :password, label_html: { class: 'image-replace cd-password'}, input_html: { class: 'full-width has-padding has-border', 'data-parsley-required' => 'true', :placeholder => 'Password'  }, wrapper_html: { class: 'fieldset' } %>
  <% end %>
  <p class="fieldset">
  	<label for="accept-terms">You agree with the FitnessPapa <a href="<%= page_path('terms') %>">Terms</a> and <a href="<%= page_path('privacy-policy') %>">Privacy & Cookie Policy</a>.</label>
  </p>
  <div class="row">
    <div class="col-xs-12 col-sm-6">
      <%= f.button :submit, "SIGN UP", class: 'full-width has-padding', wrapper_html: { class: 'fieldset' } %>
    </div>
    <div class="col-xs-12 col-sm-6">
      <a class="btn btn-block btn-social btn-facebook has-padding" href="/auth/facebook"><i class="fa fa-facebook"></i> Sign in with Facebook</a>    
    </div>
  </div>
  <hr>
  
<% end %>