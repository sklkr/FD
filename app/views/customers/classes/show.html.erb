<div class="row">
	<div class="col-xs-12">
		<h3>Passport</h3>
	</div>
</div>

<div class="row" style="margin-bottom:300px">
	<div class="col-xs-12 col-sm-9">
		<% unless @passport.blank? %>
			<div class="panel panel-info">
				<div class="panel-heading">Passports</div>
				<table class="table table-bordered table-condensed table-hover table-striped">
					<thead>
						<tr>
							<th>Name</th>
							<th>Booked at</th>
							<th>Expired on</th>
							<th>Passes</th>
						</tr>
					</thead>
					<tbody>
						<tr>
							<td>FitnessPapa Passport</td>
							<td><%= local_time(@passport.start_date, "%B %d") %></td>
							<td><%= local_time(@passport.end_date, "%B %d") %></td>
							<td><%= @passport.tickets %></td>
						</tr>
					</tbody>
				</table>
			</div>
		<% end %>
	</div>
</div>