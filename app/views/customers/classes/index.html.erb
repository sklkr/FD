<div class="row">
	<div class="col-xs-12">
		<h3>Classes</h3>
	</div>
</div>

<div class="row">
	<div class="col-xs-9">
		<div class="panel panel-default">
			<div class="panel-heading">Reserved Classes</div>
			<table class="table table-bordered table-condensed table-hover table-striped">
				<thead>
					<tr>
						<th>ID</th>
						<th>Name</th>
						<th>Center name</th>
						<th>Date</th>
						<th>Status</th>
					</tr>
				</thead>
				<tbody>
				<% unless @bookings.nil? %>
					<%@bookings.each do |pass| %>
						<tr>
							<td></td>
							<td><%= pass.fpclass.name.capitalize %></td>
							<td><%= pass.fpclass.try(:centers).try(:first).try(:name) %></td>
							<td><%= local_time(pass.fpclass.date) %></td>
							<td><span class="label label-info"><%= pass.status %></span></td>
						</tr>
					<%end%>
				<% end %>
				</tbody>
			</table>
		</div>

		<div class="panel panel-default">
			<div class="panel-heading">Used Classes</div>
			<table class="table table-bordered table-condensed table-hover table-striped">
				<thead>
					<tr>
						<th>ID</th>
						<th>Name</th>
						<th>Price</th>
						<th>Date</th>
						<th>Expired on</th>
						<th>Status</th>
					</tr>
				</thead>
				<tbody>
					<tr>No Expired Classes</tr>
				</tbody>
			</table>
		</div>	
	</div>

</div>