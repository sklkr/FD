<div class="modal fade" id="reserve" tabindex="-1" role="dialog" aria-hidden="true">
  <div class="modal-dialog modal-sm">
    <div class="modal-content">
      <div class="modal-header" style="padding:0px">
        <%= image_tag attachment_url(@center, :image), :style => 'width:100%;height:200px' %>
      </div>
      <div class="modal-body">
        <h4 class="text-center">CONFIRM YOUR RESERVATION</h4>
        <div class="row">
          <div class="col-xs-12">
            <h5>Class:: <%= @fpclass.name.capitalize %></h5>
            <h5>Center:: <%= @center.name.capitalize %></h5>
            <p><i class='fa fa-clock-o'></i> <%= local_time(@fpclass.start_time, '%B %d, %Y %a') %><br><%= @fpclass.start_time %> ( <%= @fpclass.duration %> ) </p>
          </div>
        </div>
      </div>
      <div class="modal-footer text-center">
        <%= link_to 'RESERVE CLASS', reserves_path(:id => @fpclass.id), :class => 'btn btn-primary reserve-btn', method: :post, remote: :true, :style => 'display:block' %>
      </div>
    </div>
  </div>
</div>