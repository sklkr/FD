<div class="panel blog-container" data-tags="<%= post.tags.map(&:name).join(' ') %>">
	<div class="panel-body">
		<%= render partial: 'monologue/posts/post_header', locals: {post: post} %>
		<p class="m-top-sm m-bottom-sm" data-monologue='content'>
			<%= truncate_html(post.content, length: 1000, omission: '...') %>		
		</p>
		<%= link_to post.full_url, class: "button" do %>
			<i class="fa fa-angle-double-right"></i> Continue reading
		<%end%>
		<div class="tags" data-monologue="tags">
		  <%= render post.tags %>
		</div>
		<span class="post-like text-muted tooltip-test" data-toggle="tooltip" data-original-title="I like this post!">
			<i class="fa fa-heart"></i> <span class="like-count">0</span>
		</span>
	</div>
</div>