<%= simple_form_for @customer, :url => sessions_path, :html => {:class => 'cd-form', 'data-parsley-validate' => true} do |f| %>
  <%= f.input :email, :label => 'E-mail', label_html: { class: 'image-replace cd-email'}, input_html: { class: 'full-width has-padding has-border', :placeholder => 'E-mail (eg: abc@xxx.com)'  }, wrapper_html: { class: 'fieldset' } %>
  <%= f.simple_fields_for :user do |p| %>
    <%= p.input :password, label_html: { class: 'image-replace cd-password'}, input_html: { class: 'full-width has-padding has-border', 'data-parsley-required' => 'true', :placeholder => 'Password'  }, wrapper_html: { class: 'fieldset' } %>
  <% end %>
  <div class="row">
    <div class="col-xs-12">
      <%= f.button :submit, "LOGIN", class: 'full-width has-padding', wrapper_html: { class: 'fieldset' } %>
    </div>
    <!-- <div class="col-xs-12" style="margin-top:20px">
      <a class="btn btn-block btn-social btn-facebook has-padding" href='/auth/facebook<%= "?callback_url=#{params[:url]}" unless params[:url].nil? %>'><i class="fa fa-facebook"></i> SIGN-IN WITH FACEBOOK</a>    
    </div> -->
    <div class="col-xs-12" style="margin-top:20px">
      <p class="cd-form-bottom-message"><a href="#0" class="btn full-width has-padding">Forgot your Password?</a></p>
    </div>
  </div>
  <hr>
<% end %>

