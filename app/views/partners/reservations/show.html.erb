                    <td><%= local_time(booking.created_at, '%B %d') %></td>
                    <td><span class="label label-success">Reserved</span></td>
                </tr>
                <% end %>
             <% end %>
             <% if @past.blank? %>
                <p>No Bookings</p>
             <% end %>
            </tbody>
        </table>
        <div class="panel-footer clearfix">
            
        </div>
    </div>
</div>

<% end %>