<div class="main-header clearfix">
  <div class="page-title">
      <h3 class="no-margin">Change Password</h3>
      <span></span>
  </div><!-- /page-title -->
  
  <ul class="page-stats">
  </ul><!-- /page-stats -->
</div>


<div class="padding-md" style="background:rgb(238, 247, 255)">
    <div class="row">
        <div class="col-sm-12 col-md-10 col-md-offset-1">
            <div class="row">
                <%= simple_form_for @user, url: partners_settings_path, :method => :post do |f| %>
                    <div class="col-xs-12"><%= render 'layouts/notices' %></div>
                    <div class="col-xs-12">
                        <div class="panel panel-default">
                            <div class="panel-body">
        <%= f.input :current_password, input_html: { class: 'form-control input-sm' }, wrapper_html: { class: 'form-group' } %>
        <%= f.input :password, input_html: { class: 'form-control input-sm' }, wrapper_html: { class: 'form-group' } %>
        <%= f.input :password_confirmation, input_html: { class: 'form-control input-sm' }, wrapper_html: { class: 'form-group' } %>
                           </div>
                        </div>
                    </div>

                    <div class="col-xs-12">
                        <div class="panel panel-default">
                            <div class="panel-body">
                                <%= f.submit 'Submit', :class => 'btn btn-success pull-right' %>
                            </div>
                        </div>
                    </div>
                <%end%>
            </div>
        </div>
    </div>
</div>