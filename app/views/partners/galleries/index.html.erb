<div class="main-header clearfix">
    <div class="page-title">
        <h3 class="no-margin">Gallery</h3>
        <span></span>
    </div><!-- /page-title -->
    
    <ul class="page-stats">
      <%= link_to "BACK TO CENTER", partners_center_path(params[:center_id]), :class => 'btn btn-primary' %>
    </ul><!-- /page-stats -->
</div>


<div class="padding-md">
    <% unless @photos.count >= 3  %>
    <%= simple_form_for @photo, url: partners_center_galleries_path do |f| %>
      <%= f.attachment_field :image, class: 'upload-demo', id: 'upload-demo', direct: true %>
      <%= f.submit %>
    <% end %>
    <% end %>
    <div class="row" style="margin-top:30px">
    <% @photos.each do |photo| %>
        <div class="small-4 columns">
        <%= image_tag attachment_url(photo, :image), :class => 'th', :style => 'width:100px;height:100px' %>
        <a data-method="delete" href="<%= partners_center_gallery_path(:id => photo.id) %>" rel="nofollow">Remove</a>
        </div>
    <%end%>
    </div>
</div>

<script type="text/javascript">
 $(document).ready(function() {
    Dropzone.autoDiscover = false;
    $('#center-conf').css('display', 'block');
    var dropzone = new Dropzone ("#center-photos", {
        maxFiles: <%= 3 - @photos.count %>,
        maxFilesize: 2, // Set the maximum file size to 256 MB
        paramName: "centerinfo[image]", // Rails expects the file upload to be something like model[field_name]
        addRemoveLinks: false,
        init: function(){
            this.on("maxfilesexceeded", function(file){
                alert("No more files please!");
            });
        }
    });
 });
 </script>