<div class="main-header clearfix">
    <div class="page-title">
        <h3 class="no-margin">Services</h3>
        <span></span>
    </div><!-- /page-title -->
    
    <ul class="page-stats">
        <%= link_to "NEW SERVICE", new_partners_center_service_path(params[:center_id]), :class => 'btn btn-default' %>
        <%= link_to "BACK TO CENTER", partners_center_path(params[:center_id]), :class => 'btn btn-primary' %>
    </ul><!-- /page-stats -->
</div>


<div class="padding-md">
    <div class="panel panel-default table-responsive">
        <table class="table table-striped table-responsive" id="responsiveTable">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Original Price</th>
                    <th>Selling Price</th>
                    <th>Brief Description</th>
                    <th>Schedule</th>
                    <th>Gender</th>
                    <th>Expiry of Service</th>
                </tr>
            </thead>
            <tbody>
                <% @services.each do |service| %>
                    <tr>
                        <td><a href=""><%= service.name.capitalize %></a></td>
                        <td><%= service.original_price %></td>
                        <td><span class='label label-info'><%= service.selling_price %></span></td>
                        <td><%= service.service_desc %></td>
                        <td><%= service.schedule %></td>
                        <td><span class="label label-success"></span></td>
                        <td><%= local_time(service.end_date, '%B %d, %Y') %></td>
                        <td><%= local_time(service.created_at, '%B %d, %Y') %></td>
                    </tr>
                <%end%>
            </tbody>
        </table>
        <div class="panel-footer clearfix">
        </div>
    </div>
</div>
