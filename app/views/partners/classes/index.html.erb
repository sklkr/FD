<div class="main-header clearfix">
    <div class="page-title">
        <h3 class="no-margin">Classes</h3>
        <span></span>
    </div><!-- /page-title -->
    
    <ul class="page-stats">
      <%= link_to "NEW CLASS", new_partners_class_path, :class => 'btn btn-primary' %>
    </ul><!-- /page-stats -->
</div>


<div class="padding-md">
    <div class="panel panel-default table-responsive">
        <div class="panel-heading">
            <span>Active Classes</span>
        </div>
        <table class="table table-striped table-responsive" id="responsiveTable">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Date</th>
                    <th>Start Time</th>
                    <th>Duration</th>
                    <th>Seats</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                <% @fpclasses.each do |c| %>
                    <tr>
                        <td><a href=""><%= c.name.capitalize %></a></td>
                        <td><%= local_time(c.date, '%B %d, %Y') unless c.date.blank? %></td>
                        <td><%= c.start_time.strftime('%H : %M') %></td>
                        <td><%= c.duration %></td>
                        <td><span class='label label-info'><%= c.seats %></span></td>
                        <td>
                            <span class="pull-right">
                            <a href="<%= edit_partners_class_path(c.friendly_id) %>"><i class="fa fa-edit fa-lg text-info"></i></a>&nbsp;
                        </span>
                        </td>
                    </tr>
                <%end%>
            </tbody>
        </table>
        <div class="panel-footer clearfix">
            
        </div>
    </div>
</div>


<div class="padding-md">
    <div class="panel panel-default table-responsive">
        <div class="panel-heading">
            <span>Expired Classes</span>
        </div>
        <table class="table table-striped table-responsive" id="responsiveTable">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Date</th>
                    <th>Start Time</th>
                    <th>Duration</th>
                    <th>Seats</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                <% @expired.each do |c| %>
                    <tr>
                        <td><a href=""><%= c.name.capitalize %></a></td>
                        <td><%= local_time(c.date, '%B %d, %Y') unless c.date.blank? %></td>
                        <td><%= c.start_time %></td>
                        <td><%= c.duration %></td>
                        <td><span class='label label-info'><%= c.seats %></span></td>
                        <td>
                        </td>
                    </tr>
                <%end%>
            </tbody>
        </table>
        <div class="panel-footer clearfix">
            
        </div>
    </div>
</div>

     