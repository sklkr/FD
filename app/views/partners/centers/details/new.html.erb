<%=form_for , multipart: true do %>
	<div class="row">
		<fieldset>
			<legend>Center Details</legend>
			<div class="large-6 columns">
				<div class="row">
					<div class="small-4 columns"><label for='center[name]' class="inline">Center Name</label></div>
					<div class="small-8 columns"><%= text_field_tag 'user[name]', '', :class => '' %></div>
				</div>	
				<div class="row">
					<div class="small-4 columns"><label for="center[website]" class="inline">Website (optional)</label></div>
					<div class="small-8 columns"><%= text_field_tag 'center[website]' %></div>
				</div>
				<div class="row" style="margin-bottom:16px">
					<div class="large-12 columns">
				      <label style="padding-bottom:16px">Category</label>
				      <input id="checkbox2" type="checkbox"><label for="checkbox2">Gym</label>
				      <input id="checkbox2" type="checkbox"><label for="checkbox2">Swimming</label>
				      <input id="checkbox2" type="checkbox"><label for="checkbox2">Adventure</label>
				      <input id="checkbox2" type="checkbox"><label for="checkbox2">Meditation</label><br>
				      <input id="checkbox1" type="checkbox"><label for="checkbox1">Yoga</label>
				      <input id="checkbox2" type="checkbox"><label for="checkbox2">Kids Zone</label>
				      <input id="checkbox2" type="checkbox"><label for="checkbox2">Consultant</label>
				      <input id="checkbox2" type="checkbox"><label for="checkbox2">Spa & Saloon</label>
				    </div>
				</div>
				<div class="row">
					<div class="small-4 columns"><label for="center[brandphoto]" class="inline">Brand Photo</label></div>
					<div class="small-8 columns"><%= file_field_tag 'center[brandphoto]', :style => 'padding: 0.5625rem 0' %></div>
				</div>
				<div class="row">
					<div class="small-4 columns"><label for="" class="inline">FP Verified</label></div>
					<div class="small-8 columns"><label class="inline"><span>No</span>&nbsp;<a href="#">Verify Now</a><br><span>(After registration required)</span></label></div>
				</div>
				<div class="row">
					<div class="small-4 columns"><label for="" class="inline">Experience</label></div>
					<div class="small-8 columns">
					<%= hidden_field_tag 'experience', nil, :value => '2-wheeler,4-wheeler,Air condition,Rest Room,Locker,Change Room,Wifi' %>
					</div>
				</div>
			</div>
			<div class="large-6 columns">
				<div class="row">
					<div class="small-4 columns"><label for="" class="inline">Center Type</label></div>
					<div class="small-8 columns"><%= select_tag 'center[centertype_id]', options_from_collection_for_select(Centertype.all, 'id', 'name'), :id => 'centertype' %></div>
				</div>
				<div class="row">
					<div class="small-4 columns"><label for="user[work]" class="inline">Working Hours</label></div>
					<div class="small-12 columns">
						<div class="row">
							<div class="small-3 columns"><label for="">Sun::</label></div>
							<div class="small-4 columns"><%= text_field_tag 'center[1f]', nil, :class => 'timer', :placeholder => 'From' %></div>
							<div class="small-4 columns"><%= text_field_tag 'center[1t]', nil, :class => 'timer', :placeholder => 'To' %></div>
						</div>
						<div class="row">
							<div class="small-3 columns"><label for="">Mon::</label></div>
							<div class="small-4 columns"><%= text_field_tag 'center[2f]', nil, :class => 'timer', :placeholder => 'From' %></div>
							<div class="small-4 columns"><%= text_field_tag 'center[2t]', nil, :class => 'timer', :placeholder => 'To' %></div>
						</div>
						<div class="row">
							<div class="small-3 columns"><label for="">Tue::</label></div>
							<div class="small-4 columns"><%= text_field_tag 'center[3f]', nil, :class => 'timer', :placeholder => 'From' %></div>
							<div class="small-4 columns"><%= text_field_tag 'center[3t]', nil, :class => 'timer', :placeholder => 'To' %></div>
						</div>
						<div class="row">
							<div class="small-3 columns"><label for="">Wed::</label></div>
							<div class="small-4 columns"><%= text_field_tag 'center[4f]', nil, :class => 'timer', :placeholder => 'From' %></div>
							<div class="small-4 columns"><%= text_field_tag 'center[4t]', nil, :class => 'timer', :placeholder => 'To' %></div>
						</div>
						<div class="row">
							<div class="small-3 columns"><label for="">Thurs::</label></div>
							<div class="small-4 columns"><%= text_field_tag 'center[5f]', nil, :class => 'timer', :placeholder => 'From' %></div>
							<div class="small-4 columns"><%= text_field_tag 'center[5t]', nil, :class => 'timer', :placeholder => 'To' %></div>
						</div>
						<div class="row">
							<div class="small-3 columns"><label for="">Fri::</label></div>
							<div class="small-4 columns"><%= text_field_tag 'center[6f]', nil, :class => 'timer', :placeholder => 'From' %></div>
							<div class="small-4 columns"><%= text_field_tag 'center[6t]', nil, :class => 'timer', :placeholder => 'To' %></div>
						</div>
						<div class="row">
							<div class="small-3 columns"><label for="">Sat::</label></div>
							<div class="small-4 columns"><%= text_field_tag 'user[7f]', nil, :class => 'timer', :placeholder => 'From' %></div>
							<div class="small-4 columns"><%= text_field_tag 'user[7t]', nil, :class => 'timer', :placeholder => 'To' %></div>
						</div>
					</div>
				</div>
				<div class="row">
					<div class="small-12 columns"><label for="center[slots]" class="inline">Number of slots available</label></div>
					<div class="small-4	columns"><%= text_field_tag 'center[slots]', nil, placeholder: '2' %></div>
					<div class="small-8 columns"><label class="inline">(for Spa/Saloon)</label></div>
				</div>
			</div>
			<div class="large-12 columns">
				<div class="row">
					<label for="center[brief_desc]" class="inline">Brief Description (upto 255 characters only )</label>
					<div class=""><%= text_area_tag 'center[brief_desc]', '', size: '10x5' %></div>
				</div>
				<div class="row">
					<div class=""><label for="center[detailed_desc]" class="inline">Detailed Description</label></div>
					<div class=""><%= text_area_tag 'center[detailed_desc]', '', size: '15x10' %></div>
				</div>
				<div class="row">
					<div class="small-12 columns"><label for="">Map coordication of your center - <a href="http://www.latlong.net/" target="_blank">How to find?</a></label></div>
					<div class="small-6 columns">
						<label for="center[latitude]" class="inline">Latitude</label>
						<%= text_field_tag 'center[latitude]' %>
					</div>
					<div class="small-6 columns">
						<label for="center[longitude]" class="inline">Longitude</label>
						<%= text_field_tag 'center[longitude]' %>
					</div>
					<div class="small-12 columns">
						<label for="" class="inline" style="text-align:center">Leave this blank if you dont find it</label>
					</div>
				</div>
			</div>
			<hr>
			<div class="large-12">
				<div class="right">
					<%= submit_tag 'Continue', :class => 'button small radius' %>
				</div>
			</div>
		</fieldset>
	</div>
<%end  %>


 <script type="text/javascript">
 $(document).ready(function() {
    $('.menu').dropit();
	$('#experience').tagit({
		singleFieldDelimiter: ',',
		placeholderText: 'List out experiences here',
		singleField: true,
		singleFieldNode: $('#tagsField'),
		fieldName: 'experience',
		availableTags: ["2-wheeler", "4-wheeler", "Air condition", "Rest Room", "Locker", "Change Room", "Wifi"]
	});
	$('.timer').timepicker();
 });
 </script>