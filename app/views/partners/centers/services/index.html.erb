<div class="row">
	<div class="small-4 columns"><a href="<%=new_partners_center_service_path %>" class="button tiny">Add Services</a></div>
	<div class="small-4 columns"><a href="<%= partners_center_services_path %>" class="button tiny">View Services</a></div>
	<div class="small-4 columns"><a href="" class="button tiny">View Upcoming classes</a></div>
</div>

<div class="row">
	<div class="small-12 columns">
		<table role='grid'>
		  <thead>
		    <tr>
		      <th>Type</th>
		      <th>Category</th>
		      <th>Service Name</th>
		      <th>Start day</th>
		      <th>Days</th>
		      <th>Details</th>
		      <th>Instructors</th>
		      <th>Seats</th>
		      <th>Price</th>
		      <th></th>
		    </tr>
		  </thead>
		  <tbody>
			<%@ymka.each do |p| %> 
			    <tr>
			      <td>Regular Service</td>
			      <td><%= p.category.name %></td>
			      <td><%= p.name %></td>
			      <td><%= p.start_date %></td>
			      <td><%= p.days %></td>
			      <td><%= p.service_desc %></td>
			      <td><%= "Need to change" %></td>
			      <td><%= p.seats %></td>
			      <td><%= p.selling_price %></td>
			      <td><a href="<%= partners_center_service_path(params['center_id'], p.id) %>">Edit</a></td>
			    </tr>
		    <%end  %>
		  </tbody>
		</table>
	</div>
</div>
<%unless @ssc.blank?  %>
	<div class="row">
		<div class="small-12 columns">
			<table role='grid'>
			  <thead>
			    <tr>
			      <th>Type</th>
			      <th>Category</th>
			      <th>Service Name</th>
			      <th>Time Taken</th>
			      <th>Price</th>
			      <th></th>
			    </tr>
			  </thead>
			  <tbody>
			    <%@ssc.each do |c| %>
				    <tr>
				      <td>Regular Service</td>
				      <td><%= c.category.name %></td>
				      <td><%= c.name %></td>
				      <td><%= c.time_taken %> Minutes</td>
				      <td><%= c.selling_price %></td>
					  <td><a href=" <%= partners_center_service_path(params['center_id'], c.id)  %> ">Edit</a></td>
				    </tr>
			    <%end  %>
			  </tbody>
			</table>
		</div>
	</div>
<%end  %>
<%unless @gs.blank? %>
	<div class="row">
